{
  "editor.fontLigatures": true,
  "window.titleBarStyle": "custom",
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.list.smoothScrolling": true,
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "solid",
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "relative",
  "security.workspace.trust.untrustedFiles": "open",
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "k"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "workbench.activityBar.location": "bottom",
  "editor.fontSize": 15,
  "workbench.editor.showTabs": "single",
  "vim.cursorStylePerMode.insert": "block",
  "git.enableSmartCommit": true,
  "window.menuBarVisibility": "compact",
  "diffEditor.maxComputationTime": 0,
  "workbench.settings.editor": "json",
  "editor.suggest.insertMode": "replace",
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "editor.linkedEditing": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "launch": {},
  "[json]": {},
  "workbench.statusBar.visible": true,
  "breadcrumbs.enabled": false,
  "update.showReleaseNotes": false,
  "zenMode.hideLineNumbers": false,
  "vim.leader": "<Space>",
  "vim.hlsearch": true,
  "vim.highlightedyank.color": "#553f73a1",
  "vim.highlightedyank.textColor": "#5bec95",
  "vim.highlightedyank.duration": 2000,
  "vim.highlightedyank.enable": true,
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#5bec95",
    "editorCursor.background": "#553f73",
    "terminalCursor.foreground": "#8ed162",
    "statusBar.background": "#5bec95",
    "statusBar.foreground": "#553f73",
    "statusBar.debuggingBackground": "#5bec95",
    "statusBar.debuggingForeground": "#553f73",
    "editor.selectionBackground": "#553f736e",
    "statusBarItem.remoteBackground": "#5bec95",
    "statusBarItem.remoteForeground": "#5bec95",
    "statusBarItem.errorBackground": "#553f73",
    "statusBarItem.errorForeground": "#5bec95",
    "statusBarItem.warningBackground": "#553f73",
    "statusBarItem.warningForeground": "#5bec95",
  },
  "window.zoomLevel": 1,
  "vim.normalModeKeyBindingsNonRecursive": [
    // NAVIGATION
    // switch b/w buffers
    {
      "before": [
        "<S-h>"
      ],
      "commands": [
        ":bprevious"
      ]
    },
    {
      "before": [
        "<S-l>"
      ],
      "commands": [
        ":bnext"
      ]
    },
    // splits
    {
      "before": [
        "leader",
        "v"
      ],
      "commands": [
        ":vsplit"
      ]
    },
    {
      "before": [
        "leader",
        "s"
      ],
      "commands": [
        ":split"
      ]
    },
    // panes
    {
      "before": [
        "leader",
        "h"
      ],
      "commands": [
        "workbench.action.focusLeftGroup"
      ]
    },
    {
      "before": [
        "leader",
        "j"
      ],
      "commands": [
        "workbench.action.focusBelowGroup"
      ]
    },
    {
      "before": [
        "leader",
        "k"
      ],
      "commands": [
        "workbench.action.focusAboveGroup"
      ]
    },
    {
      "before": [
        "leader",
        "l"
      ],
      "commands": [
        "workbench.action.focusRightGroup"
      ]
    },
    // NICE TO HAVE
    {
      "before": [
        "leader",
        "w"
      ],
      "commands": [
        ":w!"
      ]
    },
    {
      "before": [
        "leader",
        "q"
      ],
      "commands": [
        ":q!"
      ]
    },
    {
      "before": [
        "leader",
        "x"
      ],
      "commands": [
        ":x!"
      ]
    },
    {
      "before": [
        "[",
        "d"
      ],
      "commands": [
        "editor.action.marker.prev"
      ]
    },
    {
      "before": [
        "]",
        "d"
      ],
      "commands": [
        "editor.action.marker.next"
      ]
    },
    {
      "before": [
        "<leader>",
        "c",
        "a"
      ],
      "commands": [
        "editor.action.quickFix"
      ]
    },
    {
      "before": [
        "<S-e>"
      ],
      "commands": [
        "workbench.action.focusSideBar"
      ]
    },
    {
      "before": [
        "leader",
        "f"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      "before": [
        "leader",
        "p"
      ],
      "commands": [
        "editor.action.formatDocument"
      ]
    },
    {
      "before": [
        "g",
        "h"
      ],
      "commands": [
        "editor.action.showDefinitionPreviewHover"
      ]
    }
  ],
  "vim.visualModeKeyBindings": [
    // Stay in visual mode while indenting
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    },
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    // Move selected lines while staying in visual mode
    {
      "before": [
        "J"
      ],
      "commands": [
        "editor.action.moveLinesDownAction"
      ]
    },
    {
      "before": [
        "K"
      ],
      "commands": [
        "editor.action.moveLinesUpAction"
      ]
    },
    // toggle comment selection
    {
      "before": [
        "leader",
        "c"
      ],
      "commands": [
        "editor.action.commentLine"
      ]
    }
  ],
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.startupEditor": "none",
  "debug.showInStatusBar": "never",
  "errorLens.statusBarIconsEnabled": true,
  "editor.accessibilitySupport": "off",
  "workbench.colorTheme": "Copilot Theme - Higher Contrast",
}
